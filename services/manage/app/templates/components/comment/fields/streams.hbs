<FormElements::Label @for="comment.streams">Streams</FormElements::Label>
<FormElements::Typeahead
  @id="comment.streams"
  @dropdownClass={{dropdownClass}}
  @autocomplete="off"
  @name="streams"
  @label="Streams"
  @multiple={{true}}
  @closeOnSelect={{true}}
  @value={{value}}
  @on-change={{on-change}}
  @on-search={{action "search"}}
  as |item|
>
  {{item.identifier}}
</FormElements::Typeahead>
