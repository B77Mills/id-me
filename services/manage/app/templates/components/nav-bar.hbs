{{#link-to "manage" class="navbar-brand"}}Identity<span class="text-dark">X</span>{{/link-to}}

<ul class="navbar-nav mr-auto">
  {{#if organization}}
    {{#link-to "manage.organizations.index" organization.id tagName="li" class="nav-item" title=organiation.name}}
      {{#link-to "manage.organizations.index" organization.id class="nav-link"}}
        Organization {{entypo-icon "chevron-right"}}
      {{/link-to}}
    {{/link-to}}
    {{#link-to "manage.organizations.users" tagName="li" class="nav-item" title="Users"}}
      {{#link-to "manage.organizations.users" class="nav-link"}}Users{{/link-to}}
    {{/link-to}}
    {{#link-to "manage.organizations.applications" tagName="li" class="nav-item" title="Applications"}}
      {{#link-to "manage.organizations.applications" class="nav-link"}}Applications{{/link-to}}
    {{/link-to}}
  {{/if}}
</ul>

<ul class="navbar-nav ml-auto">
  <li class="nav-item">
    <a
      href="https://as3.gitbook.io/id-me"
      title="Application Documentation"
      class="nav-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      {{entypo-icon "text-document"}} <span class="d-none d-md-inline">Documentation</span>
    </a>
  </li>

  {{#if user.isAuthenticated}}
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">
        {{#if organization}}
          <img alt="Organization avatar" src={{organization.photoURL}} class="icon icon-sm mr-1">
          <span class="d-none d-md-inline">{{organization.name}}</span>
        {{else}}
          Select organization
        {{/if}}
      </a>

      <div class="dropdown-menu dropdown-menu-right">
        <span class="dropdown-header">Select an organization</span>
        {{#each organizations as |org|}}
          {{#link-to "manage.organizations.index" org.id class="dropdown-item dropdown-item d-flex justify-content-between"}}
            <img alt="Organization avatar" src={{org.photoURL}} class="icon icon-sm mr-1"> {{org.name}}
          {{/link-to}}
        {{/each}}
      </div>
    </li>

    <li class="nav-item dropdown">
      <a
        class="nav-link dropdown-toggle"
        title="User Settings"
        data-toggle="dropdown"
        href="#"
        role="button"
      >
        {{entypo-icon "user"}} <span class="d-none d-md-inline">{{user.model.givenName}} {{user.model.familyName}}</span>
      </a>

      <div class="dropdown-menu dropdown-menu-right">
        {{!-- <a class="dropdown-item dropdown-item d-flex justify-content-between" href="#" title="Update User Profile" {{action "displayUpdateProfile"}}>
          Update Profile
          {{entypo-icon "v-card" class="ml-1"}}
        </a> --}}
        {{!-- {{update-profile-modal isOpen=isUpdateProfileOpen model=user.model}} --}}

        <div class="dropdown-divider"></div>

        {{#link-to "logout" class="dropdown-item d-flex justify-content-between" title="Sign out of the Application"}}
          Sign out
          {{entypo-icon "log-out"}}
        {{/link-to}}
      </div>
    </li>
  {{else}}
    {{#link-to "login" tagName="li" class="nav-item" title="Sign in Into the Application"}}
      {{#link-to "login" class="nav-link"}}{{entypo-icon "login"}} Sign in{{/link-to}}
    {{/link-to}}
    {{#link-to "signup" tagName="li" class="nav-item" title="Sign up"}}
      {{#link-to "signup" class="nav-link"}}{{entypo-icon "add-user"}} Sign up{{/link-to}}
    {{/link-to}}
  {{/if}}


</ul>
