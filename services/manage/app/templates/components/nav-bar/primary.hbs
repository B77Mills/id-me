{{#link-to "manage.orgs" class="navbar-brand"}}Identity<span class="text-primary">X</span>{{/link-to}}

<ul class="navbar-nav mr-auto">
  {{#if user.isAuthenticated}}
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">
        {{#if context.org.name}}
          <img alt="Organization Avatar" src={{context.org.photoURL}} class="icon icon-sm mr-1">
          <span class="d-none d-md-inline">{{context.org.name}}</span>
        {{else}}
          Select Organization
        {{/if}}
      </a>

      <div class="dropdown-menu">
        {{#each context.orgs as |org|}}
          {{#link-to "manage.orgs.view" org.id class="dropdown-item dropdown-item d-flex"}}
            <img alt="Organization Avatar" src={{org.photoURL}} class="icon icon-sm mr-1"> {{org.name}}
          {{/link-to}}
        {{/each}}
        {{#if context.orgs.length}}
          <div class="dropdown-divider"></div>
        {{/if}}
        {{#link-to "manage.orgs.list.create" class="dropdown-item dropdown-item"}}
          {{entypo-icon "circle-with-plus"}} New Organization
        {{/link-to}}
      </div>
    </li>
  {{/if}}

  {{#each links as |link|}}
    <li class="nav-item">
      {{#link-to link.route context.orgId class="nav-link"}}
        {{link.text}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>

<ul class="navbar-nav ml-auto">
  <li class="nav-item">
    <a
      href="https://as3.gitbook.io/identity-x"
      title="IdentityX Documentation"
      class="nav-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      <NavBar::Item @icon="text-document">Documentation</NavBar::Item>
    </a>
  </li>

  <NavContextUser />

</ul>
