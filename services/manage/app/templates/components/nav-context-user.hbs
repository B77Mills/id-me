{{#if user.isAuthenticated}}
  <li class="nav-item dropdown">
    <a
      class="nav-link dropdown-toggle"
      title="User Settings"
      data-toggle="dropdown"
      href="#"
      role="button"
    >
      {{entypo-icon "user"}}
    </a>

    <div class="dropdown-menu dropdown-menu-right">
      {{#link-to "manage.orgs.invites" class="dropdown-item d-flex justify-content-between"}}
        View Invites
        {{entypo-icon "mail" class="ml-1"}}
      {{/link-to}}
      <button class="dropdown-item d-flex justify-content-between" {{action "showModal"}}>
        Update Profile
        {{entypo-icon "v-card" class="ml-1"}}
      </button>

      <div class="dropdown-divider"></div>

      {{#link-to "logout" class="dropdown-item d-flex justify-content-between" title="Sign out of the Application"}}
        Sign out
        {{entypo-icon "log-out"}}
      {{/link-to}}
    </div>
  </li>
{{else}}
  <li class="nav-item">
    {{#link-to "login" class="nav-link" title="Sign into IdentityX"}}
      <NavBar::Item @icon="login">Sign In</NavBar::Item>
    {{/link-to}}
  </li>
  <li class="nav-item">
    {{#link-to "signup" class="nav-link" title="Create new user account"}}
      <NavBar::Item @icon="add-user">Sign Up</NavBar::Item>
    {{/link-to}}
  </li>
{{/if}}

<User::ModalForm @title="Modify Profile" @show={{isModalOpen}} />
