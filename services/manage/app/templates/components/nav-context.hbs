{{#if show}}
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">
      {{#if application}}
        <img alt="Organization avatar" src={{organization.photoURL}} class="icon icon-sm mr-1">
        <span class="d-none d-md-inline">{{application.name}}</span>
      {{else}}
        {{#if organization}}
          <img alt="Organization avatar" src={{organization.photoURL}} class="icon icon-sm mr-1">
          <span class="d-none d-md-inline">{{organization.name}}</span>
        {{else}}
          Select organization
        {{/if}}
      {{/if}}
    </a>

    <div class="dropdown-menu dropdown-menu-right">
      {{#if showApps}}
        <h6 class="dropdown-header">Applications</h6>
        {{#each apps as |app|}}
          {{#link-to "manage.orgs.org.apps.app" organization.id app.id class="dropdown-item dropdown-item"}}
            {{app.name}}
          {{/link-to}}
        {{/each}}
        {{#if showOrgs}}
          <div class="dropdown-divider"></div>
        {{/if}}
      {{/if}}
      {{#if showOrgs}}
        <h6 class="dropdown-header">Organizations</h6>
        {{#each orgs as |org|}}
          {{#link-to "manage.orgs.org" org.id class="dropdown-item dropdown-item d-flex"}}
            <img alt="Organization avatar" src={{org.photoURL}} class="icon icon-sm mr-1"> {{org.name}}
          {{/link-to}}
        {{/each}}
      {{/if}}
    </div>
  </li>
{{/if}}
