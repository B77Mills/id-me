<BsModal @show={{isOpen}} @onHidden={{action "clear"}} as |modal|>

  <form {{action "sendInvitation" on="submit"}}>
    {{#modal.header}}
      <h5 class="modal-title">Send an invitation</h5>
      <button
        type="button"
        class="close"
        aria-label="Close"
        {{action modal.actions.hide}}
      >
        {{entypo-icon "cross"}}
      </button>
    {{/modal.header}}

    {{#modal.body}}
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="name">Email Address</label>
            {{input
              type="email"
              autocomplete="username email"
              autofocus=true
              class="form-control"
              value=email
            }}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="user-role">Role</label>
            {{#power-select renderInPlace=true options=roles selected=role onchange=(action (mut role)) as |role|}}
              {{ role }}
            {{/power-select}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{#if (eq canSubmit false)}}
            <small class="d-block text-info mt-3">In order to save, {{reasonForPreventSubmit}}</small>
          {{/if}}
        </div>
      </div>
    {{/modal.body}}

    {{#modal.footer}}
      {{form-elements/submit-button
        class="btn btn-success"
        disabled=isSubmitDisabled
        isSaving=isActionRunning
      }}
    {{/modal.footer}}
    {{progress-bar show=isActionRunning}}
  </form>
</BsModal>
