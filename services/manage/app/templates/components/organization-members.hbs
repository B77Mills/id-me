<div class="card-body">
  <h2 class="card-title">Users</h2>
  <p class="card-text">Manage your organization's users.</p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Role</th>
        <th scope="col">Email</th>
        <th scope="col">Joined</th>
        <th scope="col"></th>
        {{!-- <th scope="col" class="text-center text-info">{{entypo-icon "cog"}}</th> --}}
      </tr>
    </thead>
    <tbody>
      {{#each members as |membership|}}
        <OrganizationMember @membership={{membership}} />
      {{/each}}
    </tbody>
  </table>
</div>
