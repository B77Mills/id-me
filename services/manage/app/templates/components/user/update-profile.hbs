<BsModal @show={{show}} @backdrop="static" @size="large" as |modal|>

  <form {{action "update" modal.actions.hide on="submit"}}>
    {{#modal.header}}
      <h2 class="modal-title">{{this.title}}</h2>
      <button
        type="button"
        class="close"
        aria-label="Close"
        {{action modal.actions.hide}}
      >
        {{entypo-icon "cross"}}
      </button>
    {{/modal.header}}

    {{#modal.body}}
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <FormElements::Label @for="update-profile.given-name" @required={{true}}>First Name</FormElements::Label>
            <Input @id="update-profile.given-name" @type="text" @required={{true}} @autofocus={{true}} @class="form-control" @value={{this.givenName}} />
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <FormElements::Label @for="update-profile.family-name" @required={{true}}>Last Name</FormElements::Label>
            <Input @id="update-profile.family-name" @type="text" @required={{true}} @class="form-control" @value={{this.familyName}} />
          </div>
        </div>
      </div>
    {{/modal.body}}

    {{#modal.footer}}
      <FormElements::SubmitButton @class="btn btn-success" @isSaving={{this.isActionRunning}} />
    {{/modal.footer}}
  </form>
</BsModal>
