<BsModal @show={{true}} @backdrop="static" @size="large" @onClose={{action "returnToAppList"}} as |modal|>
  {{#modal.header}}
    <ul class="nav nav-pills">
      <li class="nav-item">
        {{#link-to "manage.orgs.view.apps.list.edit.index" class="nav-link"}}
          General
        {{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to "manage.orgs.view.apps.list.edit.contexts" class="nav-link"}}
          Contexts
        {{/link-to}}
      </li>
    </ul>
    <button
      type="button"
      class="close"
      aria-label="Close"
      {{action modal.actions.hide}}
    >
      {{entypo-icon "cross"}}
    </button>
  {{/modal.header}}
  {{outlet}}
</BsModal>
