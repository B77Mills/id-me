<h1 class="mb-4"><Team::Icon /> Teams</h1>

<div class="row">
  {{#each model as |team|}}
    <ListCard>
      <div class="card-body">
        <h2 class="card-title">{{team.name}}</h2>
        {{#if team.description}}
          <p class="card-text">{{team.description}}</p>
        {{/if}}
        {{#if team.domains.length}}
          <small class="text-muted">Email Domains</small>
          {{#each team.domains as |domain|}}
            <small class="d-block">{{domain}}</small>
          {{/each}}
        {{/if}}

        {{#if team.cidrs.length}}
          <small class="text-muted">IP Addresses</small>
          {{#each team.cidrs as |cidr|}}
            <small class="d-block">{{cidr}}</small>
          {{/each}}
        {{/if}}
      </div>
      <div class="card-footer">
        {{#link-to "manage.orgs.view.apps.view.teams.edit" team.id class="btn btn-primary" role="button"}}
          {{entypo-icon "edit" class="mr-1"}} Modify
        {{/link-to}}
      </div>
    </ListCard>
  {{else}}
    <div class="col">
      <p>No teams have been created.</p>
    </div>
  {{/each}}
</div>

<aside class="footer-controls left">
  <Button::Create @routeName="manage.orgs.view.apps.view.teams.create" @title="Create New Team" />
</aside>

{{outlet}}
