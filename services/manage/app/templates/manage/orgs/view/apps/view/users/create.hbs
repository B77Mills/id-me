<BsModal @show={{true}} @onHidden={{action "clear"}} as |modal|>

  <form {{action "create" on="submit"}}>
    {{#modal.header}}
      <h5 class="modal-title">Create a user</h5>
      <button
        type="button"
        class="close"
        aria-label="Close"
        {{action modal.actions.hide}}
      >
        {{entypo-icon "cross"}}
      </button>
    {{/modal.header}}

    {{#modal.body}}
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="name">First Name</label>
            {{input
              type="text"
              autofocus=true
              required=true
              class="form-control"
              value=model.givenName
            }}
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="name">Last Name</label>
            {{input
              type="text"
              required=true
              class="form-control"
              value=model.familyName
            }}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="description">Email Address</label>
            {{input
              type="email"
              required=true
              class="form-control"
              value=model.email
            }}
          </div>
        </div>
      </div>
    {{/modal.body}}

    {{#modal.footer}}
      {{form-elements/submit-button
        class="btn btn-success"
        disabled=isActionRunning
        isSaving=isActionRunning
      }}
    {{/modal.footer}}
    {{progress-bar show=isActionRunning}}
  </form>
</BsModal>
